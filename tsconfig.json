{
  "compilerOptions": {
    /* === Output Settings === */
    "outDir": "./dist",
    "rootDir": "./src",

    /* === Language & Module System === */
    "target": "ES6",          // modern JS features
    "module": "ESNext",          // matches "type": "module"
    "moduleResolution": "node",  // resolves imports like Node
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    /* === Type Checking === */
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    /* === Project Tools === */
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "skipLibCheck": true,
    "isolatedModules": true,

    /* === React (optional, uncomment if using React) === */
    // "jsx": "react-jsx",

    /* === Misc === */
    "types": ["node"]
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
